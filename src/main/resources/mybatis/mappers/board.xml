<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">


	<select id="boardList" resultType="com.javaex.vo.BoardVo">
		<![CDATA[
			select  b.no,
        			b.title,
        			b.content,
        			b.hit,
        			b.reg_date,
        			b.user_no,
        			u.name
			from board b, users u
			where u.no = b.user_no
		]]>
	</select>
	
	<select id="read" parameterType="int" resultType="com.javaex.vo.BoardVo">
		<![CDATA[
			select  b.no,
       				b.title,
        			b.content,
        			b.hit,
        			b.reg_date ,
        			b.user_no,
        			u.name
			from board b, users u
			where u.no = b.user_no
			and b.no = #{no}
		]]>
	</select>
	
	<insert id="insert" parameterType="com.javaex.vo.BoardVo">
		<![CDATA[
			insert into board
			values (seq_board_no.nextval, #{title}, #{content}, 0, sysdate, #{user_no})
		]]>
	</insert>
	
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from board
			where no = #{no}
		]]>
	
	</delete>



</mapper>